{% if section.settings.image != blank %}
  <section class="banner-section {% if section.settings.image_stretch == false %}container wide_display--false{% endif %}">
    <div class="slider flexslider homepage_slider">
      <ul class="slides">
        <li>
          <img  src="{{ section.settings.image | img_url: '1200x' }}"
                alt="{{ section.settings.image.alt | escape }}"
                class="lazyload transition-in"
                sizes="100vw"
                srcset="{{ section.settings.image | img_url: '480x' }} 480w,
                        {{ section.settings.image | img_url: '768x' }} 768w,
                        {{ section.settings.image | img_url: '1200x' }} 1200w,
                        {{ section.settings.image | img_url: '2048x2048' }} 2048w"
                />
          {% if section.settings.image != blank or section.settings.title != blank or section.settings.subtext != blank %}
            <div class="flex-caption">
              <div class="container">
                <div class="columns {% if section.settings.text_position == 'left' %} nine offset-by-one {% elsif section.settings.text_position == 'right' %} eight offset-by-seven {% else %} ten offset-by-three {% endif %} align_{{ section.settings.text_align }}">
                  {% if section.settings.title != blank %}
                    <h1 class="headline">
                      {{ section.settings.title | escape }}
                    </h1>
                  {% else %}
                    <h1 class="headline">
                      {{ page.title }}
                    </h1>
                  {% endif %}
                  {% if section.settings.subtext != blank %}
                    <div class="subtitle">
                      {{ section.settings.subtext }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        </li>
      </ul>
    </div>
  </section>
{% endif %}

<div class="container main {% if section.settings.image == blank %}content{% endif %}">
  {% unless section.settings.image %}
    <div class="sixteen columns clearfix">
      {% if section.settings.title != blank %}
        <h1 class="headline">
          {{ section.settings.title | escape }}
        </h1>
      {% else %}
        <h1 class="headline">
          {{ page.title }}
        </h1>
      {% endif %}
      {% if section.settings.subtext != blank %}
        <div class="subtitle_content">
          {{ section.settings.subtext }}
        </div>
      {% endif %}
    </div>
  {% endunless %}
  {% if page.content != blank %}
    <div class="sixteen columns page clearfix">
      <div>
        {% include 'page-multi-column', content: page.content %}
      </div>
    </div>
  {% endif %}
  <div class="sixteen columns">
    {% if section.blocks.size > 0 %}
      <dl class="faqAccordion">
        {% for block in section.blocks %}
          {% if block.type == "heading" %}
            {% if block.settings.heading != blank %}
              <h2 class="faq--heading">{{ block.settings.heading }}</h2>
            {% endif %}
          {% endif %}
          {% if block.settings.title != blank %}
            <dt><button type="button" aria-controls="panel-01" aria-expanded="true">{{ block.settings.title }}</button></dt>
            <dd id="panel-01" aria-hidden="false">
              {{ block.settings.subtitle }}
            </dd>
          {% endif %}
        {% endfor %}
      </dl>
    {% endif %}
  </div>
</div>

